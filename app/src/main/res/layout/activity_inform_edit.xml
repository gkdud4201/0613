<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/reviewText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"

        android:textSize="20dp"
        android:text="정보 수정"></TextView>
    <TextView
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="카페명"
        android:textSize="15dp"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/informedit"
        android:hint="카페의 명칭을 입력해주세요."
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <TextView
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="위치"
        android:textSize="15dp"
        android:textStyle="bold"></TextView>
    <EditText
        android:id="@+id/editAddress"
        android:layout_width="match_parent"
        android:hint="주소를 입력해주세요."
        android:textSize="15dp"
        android:layout_height="40dp"
        android:background="@drawable/informedit"
        ></EditText>
    <TextView
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="시간"
        android:textSize="15dp"
        android:textStyle="bold"></TextView>
    <EditText
        android:id="@+id/editHour"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/informedit"
        android:hint="영업시간을 입력해주세요."
        android:textSize="15dp"
        ></EditText>
    <TextView
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="SNS"
        android:textSize="15dp"
        android:textStyle="bold"></TextView>
    <EditText
        android:id="@+id/editInsta"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/informedit"
        android:hint="SNS 주소를 입력해주세요."
        android:textSize="15dp"
        ></EditText>
    <TextView
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="전화번호"
        android:textSize="15dp"
        android:textStyle="bold"></TextView>
    <EditText
        android:id="@+id/editPhone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/informedit"
        android:hint="전화번호를 입력해주세요."
        android:textSize="15dp"
        ></EditText>
    <TextView
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="기타"
        android:textSize="15dp"
        android:textStyle="bold"></TextView>
    <EditText
        android:id="@+id/editInform"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/informedit"
        android:hint="기타 정보를 입력해주세요."
        android:textSize="15dp"
        ></EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:id="@+id/editSave"
        android:layout_gravity="right|bottom"></Button>

</LinearLayout>
